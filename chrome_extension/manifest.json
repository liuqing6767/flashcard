{
    "manifest_version": 2,
    "name": "FlashCard Word",
    "version": "1.0",
    "description": "Add word to FlashCard@Ximu",
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "icons": {
        "16": "images/icon16.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["js/content.js"]
        }
    ],
    "permissions": [
        "contextMenus",
        "cookies",
        "http://fc.liuximu.com/*",
        "notifications"
    ],
    "browser_action": {
        "default_icon": {
            "19": "images/icon16.png",
            "38": "images/icon16.png"
        },
        "default_title": "FCW",
        "default_popup": "tab.html"
    }
}